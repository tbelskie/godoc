  "impactHeuristics": [
    {
      "signal": "mentions auth scope/version change",
      "pattern": "(OAuth|Auth|JWT|token|scope|permission|version|authentication)",
      "likelyImpacts": ["Authentication", "Quickstart", "API Reference: Endpoints", "Examples"]
    },
    {
      "signal": "adds new endpoint",
      "pattern": "(POST|GET|PUT|DELETE|PATCH)\\s+\\/[a-zA-Z0-9\\-\\/_]+",
      "likelyImpacts": ["API Reference: Endpoints", "SDKs", "Examples", "Changelog"]
    },
    {
      "signal": "breaking changes",
      "pattern": "(breaking|deprecated|removed|incompatible|migration)",
      "likelyImpacts": ["Migration Guides", "Changelog", "API Reference", "SDKs"]
    },
    {
      "signal": "webhook changes", 
      "pattern": "(webhook|callback|event|notification)",
      "likelyImpacts": ["Webhooks", "Integration Guide", "Examples"]
    },
    {
      "signal": "SDK updates",
      "pattern": "(SDK|library|client|package)",
      "likelyImpacts": ["SDKs", "Examples", "Installation", "Changelog"]
    },
    {
      "signal": "error handling changes",
      "pattern": "(error|exception|status code|4\\d\\d|5\\d\\d)",
      "likelyImpacts": ["Error Handling", "Troubleshooting", "API Reference"]
    }
  ]
}