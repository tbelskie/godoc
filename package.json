{
  "name": "godoc-cli",
  "version": "1.0.0",
  "description": "GOdoc - AI-powered Hugo documentation generator. Create professional documentation sites through natural language conversation.",
  "main": "godoc.js",
  "bin": {
    "godoc": "./godoc.js"
  },
  "scripts": {
    "start": "node godoc.js",
    "test": "jest",
    "demo": "node test-demo.js",
    "workflow-test": "node test-godoc-workflow.js",
    "link": "npm link",
    "unlink": "npm unlink -g godoc-cli",
    "version": "node godoc.js --version",
    "help": "node godoc.js --help"
  },
  "keywords": [
    "godoc",
    "hugo",
    "documentation", 
    "static-site-generator",
    "ai",
    "claude",
    "docs-as-code",
    "technical-writing",
    "api-docs",
    "markdown",
    "jamstack"
  ],
  "author": {
    "name": "Tom Belskie",
    "url": "https://github.com/tbelskie"
  },
  "license": "MIT",
  "homepage": "https://github.com/tbelskie/godoc",
  "repository": {
    "type": "git",
    "url": "https://github.com/tbelskie/godoc.git"
  },
  "bugs": {
    "url": "https://github.com/tbelskie/godoc/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "godoc.js",
    "src/",
    "examples/",
    "README.md",
    "IMPLEMENTATION_ROADMAP.md"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.4.1",
    "fs-extra": "^11.1.0",
    "inquirer": "^8.2.5",
    "ora": "^5.4.1"
  },
  "optionalDependencies": {
    "hugo-extended": "^0.120.0"
  },
  "devDependencies": {
    "jest": "^29.0.0"
  },
  "preferGlobal": true,
  "os": ["darwin", "linux", "win32"],
  "cpu": ["x64", "arm64"]
